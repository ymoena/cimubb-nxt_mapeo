<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NXT">


    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:measureWithLargestChild="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sLink"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sLink"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/button12"
            android:layout_toStartOf="@+id/button12"
            android:text="Link" />

        <Button
            android:id="@+id/sMotores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="  Motor  " />

        <Button
            android:id="@+id/sSensores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/sensor2"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/sensor2"
            android:layout_toEndOf="@+id/button12"
            android:layout_toRightOf="@+id/button12"
            android:text="Sensor" />

        <Button
            android:id="@+id/Ejecucion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Execute" />


    </LinearLayout>

    <RelativeLayout

        android:id="@+id/linkLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tituloLink"
            android:layout_width="404dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menuLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal"
            android:text="Conectar"
            android:textSize="35sp" />


        <ToggleButton
            android:id="@+id/bluetooth"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_alignEnd="@+id/yrojo"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignRight="@+id/yrojo"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignTop="@+id/habilitar"
            android:checked="false"
            android:text="BT" />

        <ToggleButton
            android:id="@+id/habilitar"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_alignEnd="@+id/iniciarcolor"
            android:layout_alignRight="@+id/iniciarcolor"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/bluetooth"
            android:checked="false"
            android:text="Habilitar/Deshabilitar"
            android:textOff="Deshabilitar sensores"
            android:textOn="Habilitar sensores" />

        <TextView
            android:id="@+id/etiquetacolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tituloLink"
            android:layout_centerHorizontal="true"
            android:text="color" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bluetooth"
            android:layout_toLeftOf="@+id/etiquetacolor"
            android:layout_toStartOf="@+id/etiquetacolor"
            android:text="Seguimiento Colores"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/abc_input_method_navigation_guard" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView6"
            android:layout_alignRight="@+id/textView6"
            android:layout_below="@+id/textView3"
            android:text="Rojo"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView5"
            android:text="Azul"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:text="Verde"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView7"
            android:text="Objetivo"
            android:textColor="@color/abc_input_method_navigation_guard" />

        <ToggleButton
            android:id="@+id/iniciarcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ynegro"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/habilitar"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="ToggleButton" />

        <TextView
            android:id="@+id/xrojo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/xazul"
            android:layout_alignLeft="@+id/xazul"
            android:layout_alignRight="@+id/xazul"
            android:layout_alignStart="@+id/xazul"
            android:layout_below="@+id/textView3"
            android:text="x:0" />

        <TextView
            android:id="@+id/xazul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xrojo"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"
            android:text="x:0" />

        <TextView
            android:id="@+id/xverde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/xazul"
            android:layout_alignStart="@+id/xazul"
            android:layout_below="@+id/xazul"
            android:text="x:0" />

        <TextView
            android:id="@+id/xnegro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/xverde"
            android:layout_alignStart="@+id/xverde"
            android:layout_below="@+id/xverde"
            android:text="x:0" />

        <TextView
            android:id="@+id/yrojo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:text="y:0" />

        <TextView
            android:id="@+id/yazul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/yrojo"
            android:layout_alignStart="@+id/yrojo"
            android:layout_below="@+id/yrojo"
            android:text="y:0" />

        <TextView
            android:id="@+id/yverde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/yazul"
            android:layout_alignStart="@+id/yazul"
            android:layout_below="@+id/yazul"
            android:text="y:0" />

        <TextView
            android:id="@+id/ynegro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/yverde"
            android:layout_alignStart="@+id/yverde"
            android:layout_below="@+id/yverde"
            android:text="y:0" />

        <Button
            android:id="@+id/buttonlogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/iniciarcolor"
            android:layout_alignLeft="@+id/iniciarcolor"
            android:layout_alignRight="@+id/iniciarcolor"
            android:layout_alignStart="@+id/iniciarcolor"
            android:layout_below="@+id/iniciarcolor"
            android:background="@android:color/holo_red_dark"
            android:text="Salir"
            android:textColor="@color/primary_text_disabled_material_dark" />

        <TextView
            android:id="@+id/senal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/buttonlogout"
            android:layout_toEndOf="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"
            android:text="Ejecutandose"
            android:textColor="@color/abc_input_method_navigation_guard" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/motorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloMotores"
            android:layout_width="404dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menuLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal"
            android:text="Control de Motores"
            android:textSize="35sp" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="295dp"
            android:layout_above="@+id/seleccionMotor"
            android:layout_below="@+id/tituloMotores"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/motorR"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/power"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/motorL"
                android:text="R" />

            <Button
                android:id="@+id/motorL"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/power"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="L" />

            <SeekBar
                android:id="@+id/power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/datosMotor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/motorR"
                android:layout_toEndOf="@+id/motorR"
                android:layout_toRightOf="@+id/motorR"
                android:text="Recibiendo Datos..." />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/seleccionMotor"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/motor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="1" />

            <Button
                android:id="@+id/motor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="2" />

            <Button
                android:id="@+id/motor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="3" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sensorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/configure"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="65dp"
            android:gravity="center"

            android:text="Configurar" />


        <TextView
            android:id="@+id/sensor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignEnd="@+id/tituloSensores"
            android:layout_alignRight="@+id/tituloSensores"
            android:layout_alignTop="@+id/textView10"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_toRightOf="@+id/textView11"
            android:text="" />

        <TextView
            android:id="@+id/sensor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView11"
            android:layout_alignEnd="@+id/sensor1"
            android:layout_alignLeft="@+id/sensor1"
            android:layout_alignRight="@+id/sensor1"
            android:layout_alignStart="@+id/sensor1"
            android:layout_alignTop="@+id/textView11"
            android:text="" />

        <TextView
            android:id="@+id/sensor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView13"
            android:layout_alignEnd="@+id/sensor2"
            android:layout_alignLeft="@+id/sensor2"
            android:layout_alignRight="@+id/sensor2"
            android:layout_alignStart="@+id/sensor2"
            android:layout_alignTop="@+id/textView12"
            android:text="" />

        <TextView
            android:id="@+id/tituloSensores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:gravity="center_horizontal"
            android:text="Control de Sensores"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tituloSensores"
            android:layout_alignStart="@+id/tituloSensores"
            android:layout_below="@+id/tituloSensores"
            android:layout_marginTop="45dp"
            android:gravity="center_horizontal"
            android:text="Ultrasonido :"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="36dp"
            android:gravity="center_horizontal"
            android:text="Sensor de Luz 1:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="36dp"
            android:gravity="center_horizontal"
            android:text="Sensor de Luz 2:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignStart="@+id/textView12"
            android:layout_below="@+id/textView12"
            android:layout_marginTop="36dp"
            android:gravity="center_horizontal"
            android:text="Sensor de Luz 3:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/sensor4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView13"
            android:layout_alignEnd="@+id/sensor3"
            android:layout_alignLeft="@+id/sensor3"
            android:layout_alignRight="@+id/sensor3"
            android:layout_alignStart="@+id/sensor3"
            android:layout_alignTop="@+id/textView13"
            android:text="" />

        <TextView
            android:id="@+id/instrucciones"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@+id/textView13"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="Inicie el programa CIM-NXT en el robot para recibir los datos" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/configureLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout

            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="51dp">


            <TextView
                android:id="@+id/text_linea"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <Button
                android:id="@+id/capturar_linea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Capturar Linea" />

        </LinearLayout>

        <LinearLayout

            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/line_follower"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="52dp">


            <TextView
                android:id="@+id/text_fondo"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <Button
                android:id="@+id/capturar_fondo"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Capturar Fondo" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Selecciona los colores"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/line_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="62dp"
            android:text="Line Follower" />

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ejecucionLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/prueba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reaccion_20cm"
            android:layout_alignStart="@+id/reaccion_20cm"
            android:layout_below="@+id/reaccion_20cm"
            android:text="prueba" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Por tiempo\n(Adelante)"
            android:id="@+id/tiempo_adelante"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotaciones\n(Adelante)"
            android:id="@+id/rotacion_adelante"
            android:layout_toRightOf="@+id/tiempo_adelante"
            android:layout_toEndOf="@+id/tiempo_adelante"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="5dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo\n(atras)"
            android:id="@+id/tiempo_atras"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="5dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotacion\n(atras)"
            android:layout_toRightOf="@+id/tiempo_atras"
            android:id="@+id/rotacion_atras"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="15dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reaccion\n(10 cm)"

            android:id="@+id/reaccion_10cm"

            android:layout_marginTop="230dp"

            android:layout_marginLeft="10dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reaccion\n(15 cm)"

            android:id="@+id/reaccion_15cm"
            android:layout_toRightOf="@+id/reaccion_10cm"
            android:layout_marginTop="230dp"

            android:layout_marginLeft="10dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reaccion\n(20cm)"

            android:id="@+id/reaccion_20cm"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="15dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reaccion\n(25 cm)"

            android:id="@+id/reaccion_25cm"

            android:layout_marginTop="300dp"
            android:layout_toRightOf="@+id/reaccion_20cm"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reaccion_25cm"
            android:layout_alignStart="@+id/reaccion_25cm"
            android:layout_below="@+id/reaccion_25cm"
            android:text="Actualizar" />

        <Button
            android:id="@+id/actualizar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/reaccion_25cm"
            android:layout_toStartOf="@+id/reaccion_25cm"
            android:text="Actualizar2" />


    </RelativeLayout>


</FrameLayout>